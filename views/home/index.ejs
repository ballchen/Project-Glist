<div class="container" ng-controller="mainCtrl">
  <header>
    <h1>this is header</h1>
  </header>
  <hr/>
  <button ng-click="create()">Creat list</button>

  <ul ng-repeat="list in lists">
    <li>{{ list.id }} <button ng-click="delete($index)">X</button></li>
  </ul>
  <hr>
  <nav>
    <ul>
      <li><a href="/">home</a></li>
      <li><a href="/post/create">create</a></li>
      <li><a href="/about">about</a></li>
    </ul>
  </nav>
  <% if (info = req.flash("info")) { %>
  <div>
    <%= info %>
  </div>
  <% } %>
  <% posts.forEach(function(post, index) { %>
  <article>
    <h2><%= post.title %></h2>
    <div class="content">
      <%= post.content %>
    </div>
    <div class="link">
      <a href="/post/get/<%=post.id%>">link to <%=post.title%></a>
    </div>
  </article>

  <% }); %>
</div>
